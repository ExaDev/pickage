import { describe, it, expect, vi, beforeEach } from "vitest";
import { render } from "@testing-library/react";
import userEvent from "@testing-library/user-event";
import { PackageInput } from "./PackageInput";
import { NpmsClient } from "@/adapters/npm/npms-client";

// Note: screen is available globally in vitest with @testing-library/react
const { screen } = require("@testing-library/react");

// Mock NpmsClient
vi.mock("@/adapters/npm/npms-client", () => ({
  NpmsClient: vi.fn(),
}));

describe("PackageInput", () => {
  let mockNpmsClient: {
    fetchSuggestions: ReturnType<typeof vi.fn>;
  };

  beforeEach(() => {
    mockNpmsClient = {
      fetchSuggestions: vi.fn(),
    };

    vi.mocked(NpmsClient).mockImplementation(() => mockNpmsClient as unknown);
    vi.clearAllMocks();
  });

  it("renders two input fields by default", () => {
    render(<PackageInput onCompare={() => {}} />);

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    expect(inputs).toHaveLength(2);
  });

  it("shows compare button", () => {
    render(<PackageInput onCompare={() => {}} />);

    expect(
      screen.getByRole("button", { name: /compare/i }),
    ).toBeInTheDocument();
  });

  it("can add a third package", async () => {
    const user = userEvent.setup();
    render(<PackageInput onCompare={() => {}} />);

    const addButton = screen.getByRole("button", { name: /\+ add package/i });
    await user.click(addButton);

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    expect(inputs).toHaveLength(3);
  });

  it("can add packages up to maximum of 6", async () => {
    const user = userEvent.setup();
    render(<PackageInput onCompare={() => {}} />);

    const addButton = screen.getByRole("button", { name: /\+ add package/i });

    // Add 4 more packages (starting with 2)
    for (let i = 0; i < 4; i++) {
      await user.click(addButton);
    }

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    expect(inputs).toHaveLength(6);

    // Should not be able to add a 7th
    expect(addButton).not.toBeInTheDocument();
  });

  it("can remove packages down to minimum of 2", async () => {
    const user = userEvent.setup();
    render(<PackageInput onCompare={() => {}} />);

    // First add a third package
    const addButton = screen.getByRole("button", { name: /\+ add package/i });
    await user.click(addButton);

    // Now remove it
    const removeButton = screen.getByRole("button", {
      name: /remove package 3/i,
    });
    await user.click(removeButton);

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    expect(inputs).toHaveLength(2);
  });

  it("disables compare button with less than 2 valid packages", () => {
    render(<PackageInput onCompare={() => {}} />);

    const compareButton = screen.getByRole("button", { name: /compare/i });
    expect(compareButton).toBeDisabled();
  });

  it("enables compare button with 2 valid packages", async () => {
    const user = userEvent.setup();
    render(<PackageInput onCompare={() => {}} />);

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    const compareButton = screen.getByRole("button", { name: /compare/i });

    await user.type(inputs[0], "react");
    await user.type(inputs[1], "preact");

    expect(compareButton).toBeEnabled();
  });

  it("shows error for duplicate package names", async () => {
    const user = userEvent.setup();
    render(<PackageInput onCompare={() => {}} />);

    const inputs = screen.getAllByPlaceholderText("e.g., react");

    await user.type(inputs[0], "react");
    await user.type(inputs[1], "react");

    expect(
      screen.getByText(/please enter unique package names/i),
    ).toBeInTheDocument();
  });

  it("calls onCompare with array of package names", async () => {
    const user = userEvent.setup();
    const handleCompare = () => {};
    const mockCompare = vi.fn(handleCompare);

    render(<PackageInput onCompare={mockCompare} />);

    const inputs = screen.getAllByPlaceholderText("e.g., react");
    const compareButton = screen.getByRole("button", { name: /compare/i });

    await user.type(inputs[0], "react");
    await user.type(inputs[1], "preact");
    await user.click(compareButton);

    expect(mockCompare).toHaveBeenCalledWith(["react", "preact"]);
  });

  // Autocomplete-specific tests
  describe("autocomplete", () => {
    it("allows typing in autocomplete inputs", async () => {
      const user = userEvent.setup();
      render(<PackageInput onCompare={() => {}} />);

      const inputs = screen.getAllByPlaceholderText("e.g., react");

      await user.type(inputs[0], "react");
      await user.type(inputs[1], "vue");

      expect(inputs[0]).toHaveValue("react");
      expect(inputs[1]).toHaveValue("vue");
    });

    it("submits comparison with autocomplete values", async () => {
      const user = userEvent.setup();
      const handleCompare = vi.fn();

      render(<PackageInput onCompare={handleCompare} />);

      const inputs = screen.getAllByPlaceholderText("e.g., react");
      const compareButton = screen.getByRole("button", { name: /compare/i });

      await user.type(inputs[0], "custom-package");
      await user.type(inputs[1], "another-package");

      await user.click(compareButton);

      expect(handleCompare).toHaveBeenCalledWith([
        "custom-package",
        "another-package",
      ]);
    });

    it("handles special characters in package names", async () => {
      const user = userEvent.setup();
      const handleCompare = vi.fn();

      render(<PackageInput onCompare={handleCompare} />);

      const inputs = screen.getAllByPlaceholderText("e.g., react");
      const compareButton = screen.getByRole("button", { name: /compare/i });

      await user.type(inputs[0], "@scoped/package");
      await user.type(inputs[1], "package-name");

      await user.click(compareButton);

      expect(handleCompare).toHaveBeenCalledWith([
        "@scoped/package",
        "package-name",
      ]);
    });

    it("maintains autocomplete functionality when adding/removing inputs", async () => {
      const user = userEvent.setup();
      render(<PackageInput onCompare={() => {}} />);

      const inputs = screen.getAllByPlaceholderText("e.g., react");
      expect(inputs).toHaveLength(2);

      // Add a third input
      const addButton = screen.getByRole("button", { name: /\+ add package/i });
      await user.click(addButton);

      const newInputs = screen.getAllByPlaceholderText("e.g., react");
      expect(newInputs).toHaveLength(3);

      // Type in the new input
      await user.type(newInputs[2], "third-package");
      expect(newInputs[2]).toHaveValue("third-package");
    });
  });
});
